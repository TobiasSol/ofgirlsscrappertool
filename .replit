modules = ["nodejs-20", "web", "bash", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start"
waitForPort = 5173

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 5173
externalPort = 5173

[deployment]
deploymentTarget = "vm"
# Build Frontend, dann starte Backend auf Port 8000 (der alles serviert)
run = ["gunicorn", "--bind", "0.0.0.0:8000", "--workers", "2", "--timeout", "120", "backend.server:app"]
build = ["npm", "run", "build"]

[[deployment.healthChecks]]
path = "/health"
initialDelaySeconds = 10
periodSeconds = 10
timeoutSeconds = 5
successThreshold = 1
failureThreshold = 30
