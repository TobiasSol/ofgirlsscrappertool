[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "concurrently \"npx vite preview\" \"cd backend && python server.py\" --names \"FRONTEND,BACKEND\" --prefix-colors \"cyan,yellow\""]
build = ["npm", "run", "build"]
