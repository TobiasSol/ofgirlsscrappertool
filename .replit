run = ["bash", "-c", "cd backend && python -c 'from server import init_db; init_db()' && gunicorn --bind 0.0.0.0:5000 --workers 2 --timeout 120 --access-logfile - --error-logfile - server:app"]
build = ["npm", "run", "build"]
